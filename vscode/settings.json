// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
  // font
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  // "editor.fontFamily": "RictyDiminishedDiscord-Regular",
  "editor.fontFamily": "RictyDiminishedDiscord-Regular",
  "editor.fontLigatures": true,
  // 行の折り返し方法を制御します。次の値を指定できます。
  //  - 'off' (折り返さない)
  //  - 'on' (ビューポート折り返し)
  //  - 'wordWrapColumn' ('editor.wordWrapColumn' で折り返し)
  //  - 'bounded' (ビューポートと 'editor.wordWrapColumn' の最小値で折り返し)。
  // "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrap": "on",
  // 'editor.wordWrap' が 'wordWrapColumn' または 'bounded' の場合に、エディターの折り返し桁を制御します。
  "editor.wordWrapColumn": 80,
  // 垂直ルーラーを表示する列
  "editor.rulers": [
    0,
    80
  ],
  // 貼り付けた内容がエディターにより自動的にフォーマットされるかどうかを制御します。フォーマッタを使用可能にする必要があります。また、フォーマッタがドキュメント内の範囲をフォーマットできなければなりません。
  // "editor.formatOnPaste": true,
  "editor.formatOnPaste": true,
  // "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1100,
  "editor.renderIndentGuides": true,
  "pasteAndIndent.selectAfter": true,
  // 拡張機能を自動的に更新します
  "extensions.autoUpdate": true,
  // エディターで空白文字を表示する方法を制御します。'none'、'boundary' および 'all' が使用可能です。'boundary' オプションでは、単語間の単一スペースは表示されません。
  "editor.renderWhitespace": "all",
  "typescript.referencesCodeLens.enabled": true,
  // Emmet
  "emmet.syntaxProfiles": {
    "javascript": "css",
    "php": "css",
    "vue": "css"
  },
  // Tab Size
  "beautify.options": {},
  "beautify.tabSize": 2,
  "workbench.iconTheme": "vs-seti",
  "window.zoomLevel": 0,
  // 検索でファイルとフォルダーを除外するために glob パターンを構成します。files.exclude 設定からすべての glob パターンを継承します。
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  // Overrides colors from the currently selected color theme. This settteing is experimental as the names of the colors will change in the next release.
  "workbench.colorCustomizations": {
    "statusBar.background": "#e33345",
    "statusBar.foreground": "#efefef",
    // "statusBarDebuggingBackground": "#de3de5"
  },
  // Auto Close Tag
  "auto-close-tag.SublimeText3Mode": true,
  // Settings for PostCSS Sorting plugin
  "postcssSorting.config": {
    "order": [
      "custom-properties",
      "dollar-variables",
      "at-rules",
      {
        "type": "at-rule",
        "name": "include"
      },
      {
        "type": "at-rule",
        "name": "extend"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "breakpoint"
      },
      "rules"
    ],
    "rule-nested-empty-line-before": [
      true,
      {
        "except": [
          "first-nested"
        ]
      }
    ]
  },
  "sync.gist": "ddb2cff3c5c60b3c558847d8bc2d9945",
  "sync.lastUpload": "2017-03-20T08:59:18.851Z",
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.lastDownload": "",
  // "sync.version": 262,
  // "sync.showSummary": true,
  "sync.forceDownload": false,
  "sync.anonymousGist": false,
  "sync.host": "",
  "sync.pathPrefix": "",
  "trailing-spaces.deleteModifiedLinesOnly": true,
  "editor.wrappingIndent": "same",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": true,
  "trailing-spaces.highlightCurrentLine": false,
  "editor.lineHeight": 24,
  "scss.validate": true,
  "sublimeTextKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "prettier.semi": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true,
    },
    {
      "language": "scss",
      "autoFix": true,
    }
  ],
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "stylelint.additionalDocumentSelectors": [
    "js",
    "jsx",
    "ts",
    "vue",
  ],
  "editor.formatOnSave": false,
  "prettier.disableLanguages": [
    ""
  ],
  "files.associations": {
    "*.vue": "vue"
  },
  "editor.acceptSuggestionOnEnter": "on",
  "editor.scrollBeyondLastLine": true,
  "workbench.editor.tabCloseButton": "right",
  "files.trimTrailingWhitespace": true,
}
